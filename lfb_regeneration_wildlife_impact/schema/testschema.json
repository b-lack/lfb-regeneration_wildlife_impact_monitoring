{
    "$schema": "http://json-schema.org/draft-07/schema",
    "type": "object",
    "additionalProperties": false,
    "properties": {
        "street_address": {
            "type": "string"
        },
        "country": {
            "default": "United States of America",
            "enum": [
                "United States of America",
                "Canada"
            ]
        },
        "postal_code": {
            "type": "string"
        }
    },
    "required": [
        "street_address",
        "country"
    ],
    "if": {
        "properties": {
            "country": {
                "const": "United States of America"
            }
        }
    },
    "then": {
        "properties": {
            "postal_code": {
                "type": "string",
                "pattern": "[0-9]{5}(-[0-9]{4})?"
            }
        },
        "required": ["postal_code"]
    },
    "else": {
        "properties": {
            "postal_code": {
                "type": "string",
                "pattern": "[A-Z][0-9][A-Z] [0-9][A-Z][0-9]"
            }
        }
    }
}